<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qtyTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 + 5 + 4 + 2"
            android:textColor="#E91E63" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="13"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/SevenButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7" />

                        <Button
                            android:id="@+id/EightButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8" />

                        <Button
                            android:id="@+id/NineButton"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="9" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/FourButton"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:text="4" />

                        <Button
                            android:id="@+id/FiveButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5" />

                        <Button
                            android:id="@+id/SixButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/OneButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1" />

                        <Button
                            android:id="@+id/TwoButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2" />

                        <Button
                            android:id="@+id/ThreeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/ZeroButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <Button
                            android:id="@+id/ClearButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CLEAR" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="264dp"
            android:layout_height="92dp"
            android:gravity="center"
            android:text="4D6"
            android:textColor="#4CAF50"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="147dp"
        android:layout_height="667dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="64dp">

        <Button
            android:id="@+id/D4Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D4"
            app:backgroundTint="#E80909" />

        <Button
            android:id="@+id/D6Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D6"
            app:backgroundTint="#E80909" />

        <Button
            android:id="@+id/D8Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D8"
            app:backgroundTint="#E80909" />

        <Button
            android:id="@+id/D10Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D10"
            app:backgroundTint="#E80909" />

        <Button
            android:id="@+id/D12Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D12"
            app:backgroundTint="#E80909" />

        <Button
            android:id="@+id/D20Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D20"
            app:backgroundTint="#E80909" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="263dp"
        android:layout_height="380dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="351dp">

        <Button
            android:id="@+id/RollButton"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:text="ROLL!!!"
            android:textSize="45sp"
            app:backgroundTint="#18BF1E" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>